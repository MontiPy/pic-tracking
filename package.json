{
  "name": "supplier-task-portal",
  "version": "2.0.0",
  "description": "Manufacturing supplier task management portal with inline editing and advanced scheduling",
  "keywords": ["manufacturing", "supplier-management", "task-tracking", "project-management"],
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start", 
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "css:types": "typed-css-modules src --pattern '**/*.module.css' --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "analyze": "ANALYZE=true next build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "migration:validate": "tsx scripts/validate-migration.ts",
    "migration:assess": "tsx scripts/assess-migration-data.ts",
    "migration:backup": "tsx scripts/backup-strategy-windows.ts",
    "migration:validate-v2": "tsx scripts/validate-v2-system.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.540.0",
    "next": "15.4.6",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.7",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "tsx": "^4.20.4",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5",
    "vitest": "^2.1.9"
  }
}
